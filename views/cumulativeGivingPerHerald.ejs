<div class="content-body">
    <div class="container-fluid">
        <div class="element-area">
            <div class="container-fluid pt-0 ps-0 pe-lg-4 pe-0">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="card dz-card">
                            <div class="card-header flex-wrap d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">Cumulative Giving Per Herald</h4>
                                    <p class="mb-0">Calculated as: Total Audience Ã— 0.005 (Approved campaigns only)</p>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="example2" class="display" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Herald ID</th>
                                                <th>Herald Name</th>
                                                <th>Email</th>
                                                <th>Total Audience</th>
                                                <th>Cumulative Giving Amount</th>
                                                <th>Campaign Count</th>
                                                <th>Last Campaign Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% cumulativeGivingPerHerald.forEach(function(herald) { %>
                                                <tr>
                                                    <td><%= herald.subscriberId %></td>
                                                    <td><%= herald.herald_name || 'N/A' %></td>
                                                    <td><%= herald.herald_email || 'N/A' %></td>
                                                    <td><%= Number(herald.total_audience).toLocaleString() %></td>
                                                    <td><%= Number(herald.cumulative_giving_amount).toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></td>
                                                    <td><%= herald.campaign_count %></td>
                                                    <td><%= herald.last_campaign_date ? new Date(herald.last_campaign_date).toLocaleDateString() : 'N/A' %></td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="pagination-controls mt-3">
                                    <% if (pagination.totalPages > 1) { %>
                                        <nav>
                                            <ul class="pagination">
                                                <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                                                    <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                                                        <a class="page-link" href="?page=<%= i %>&limit=<%= pagination.limit %>"><%= i %></a>
                                                    </li>
                                                <% } %>
                                            </ul>
                                        </nav>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
$(document).ready(function() {
    $('#cumulativeTable').DataTable({
        "processing": true,
        "serverSide": false,
        "pageLength": <%= pagination.limit %>,
        "lengthMenu": [[50, 100, 200, -1], [50, 100, 200, "All"]],
        "order": [[4, "desc"]]
    });
});
</script> 