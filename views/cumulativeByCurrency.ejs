<div class="content-body">
    <div class="container-fluid">
        <div class="element-area">
            <div class="container-fluid pt-0 ps-0 pe-lg-4 pe-0">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="card dz-card">
                            <div class="card-header flex-wrap d-flex justify-content-between">
                                <div>
                                    <h4 class="card-title">Total Campaign Costs (Approved Only)</h4>
                                    <p class="mb-0">Summary of campaign costs grouped by currency</p>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="campaignCostByCurrencyTable" class="display" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Currency</th>
                                                <th>Total Cost</th>
                                                <th>Campaign Count</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% totalCampaignCosts.forEach(function(cost) { %>
                                                <tr>
                                                    <td><%= cost.currency %></td>
                                                    <td><%= Number(cost.total_cost).toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></td>
                                                    <td><%= cost.campaign_count %></td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
$(document).ready(function() {
    $('#campaignCostByCurrencyTable').DataTable({
        "processing": true,
        "serverSide": false,
        "pageLength": 50,
        "lengthMenu": [[50, 100, 200, -1], [50, 100, 200, "All"]],
        "order": [[1, "desc"]]
    });
});
</script>